@model IEnumerable<ArchpointMvcPHR.Models.HeartHistory>

@{
    ViewData["Title"] = "Index";
}

<h2>Heart History</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicalProviderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeartDiseaseDisorder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateResolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalProviderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeartDiseaseDisorder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateResolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HeartHistoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HeartHistoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HeartHistoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
