                @Html.DisplayFor(modelItem => item.EmerContactEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmerContactStreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmerContactCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmerContactStateProvince)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmerContactZip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmerContactCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
