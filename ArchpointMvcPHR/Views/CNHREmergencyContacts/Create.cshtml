            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelationshipToPatient" class="control-label"></label>
                <input asp-for="RelationshipToPatient" class="form-control" />
                <span asp-validation-for="RelationshipToPatient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomePhone" class="control-label"></label>
                <input asp-for="HomePhone" class="form-control" />
                <span asp-validation-for="HomePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EveningPhone" class="control-label"></label>
                <input asp-for="EveningPhone" class="form-control" />
                <span asp-validation-for="EveningPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellPhone" class="control-label"></label>
                <input asp-for="CellPhone" class="form-control" />
                <span asp-validation-for="CellPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactEmail" class="control-label"></label>
                <input asp-for="EmerContactEmail" class="form-control" />
                <span asp-validation-for="EmerContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactStreetAddress" class="control-label"></label>
                <input asp-for="EmerContactStreetAddress" class="form-control" />
                <span asp-validation-for="EmerContactStreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactCity" class="control-label"></label>
                <input asp-for="EmerContactCity" class="form-control" />
                <span asp-validation-for="EmerContactCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactStateProvince" class="control-label"></label>
                <input asp-for="EmerContactStateProvince" class="form-control" />
                <span asp-validation-for="EmerContactStateProvince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactZip" class="control-label"></label>
                <input asp-for="EmerContactZip" class="form-control" />
                <span asp-validation-for="EmerContactZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmerContactCountry" class="control-label"></label>
                <input asp-for="EmerContactCountry" class="form-control" />
                <span asp-validation-for="EmerContactCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next Step - Insurance Info" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


