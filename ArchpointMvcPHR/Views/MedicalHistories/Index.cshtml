@model IEnumerable<ArchpointMvcPHR.Models.MedicalHistory>

@{
    ViewData["Title"] = "Index";
}

<h2>Medical History</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiseaseDisorder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDiagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeAtOnset)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateResolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalProviderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiseaseDisorder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfDiagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeAtOnset)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateResolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalProviderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
